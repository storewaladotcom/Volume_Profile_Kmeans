install.packages(c("ggplot2", "knitr", "plotly", "quantmod", "reactable", "tidyr", "xts"))
knitr::opts_chunk$set(echo = TRUE)
library(dplyr)
library(xts)
library(quantmod)
library(plotly)
library(ggplot2)
library(reactable)
library(tidyr)
library(purrr)
library(plotly)
BTC <- getSymbols("BTC-USD", auto.assign = F)
names(BTC) <- c("Open", "High", "Low", "Close", "Volume", "Adjusted")
BTC <- data.frame(Date = index(BTC), coredata(BTC))
BTC_Long <- BTC %>%
pivot_longer(-c("Date" ,"Volume", "Adjusted"), names_to = "Type", values_to = "Price")
ggplotly(BTC_Long %>%
ggplot(aes(log(Volume), Price)) +
scale_y_log10() +
geom_point(alpha = .1,  color = "blue"))
ggplotly(BTC_Long %>%
ggplot(aes(Price)) +
geom_histogram(binwidth = 100) +
coord_flip())
